<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1 mt-2">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1 mt-2">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1 mt-2">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="description mb-5 mt-2">
        {{restaurant.description}}
      </p>

      <div class="edit-container d-flex justify-content-end mt-5">

        <a href="/restaurants/{{restaurant._id}}/edit"><i class="fas fa-edit" style="font-size:25px"></i></a>

        <form class="ml-2" action="/restaurants/{{this._id}}?_method=DELETE" method='POST'>
          <button class="delete-btn" type=" submit">
            <i class=" fas fa-trash-alt" style="color:rgb(241, 152, 34);font-size:25px"></i>
          </button>
        </form>

      </div>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>